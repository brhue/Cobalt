<div class="columns is-vcentered landingPageBG is-justify-content-center">
    
    <div class="box" style="background:#ffae00">
        <h1 class="initialButton"><strong>Welcome to Cobalt</strong></h1>
        <button class="button initialButton" style="font-size:medium; color:#ffae00; background-color: #03045c;"data-type="create">
            <strong>Create</strong>
        </button>
        <button class="button initialButton" style="font-size:medium; color:#ffae00; background-color: #03045c;"data-type="login">
            <strong>Log In</strong>
        </button>

        <div class="field creatingUser is-hidden">
            <h1>Create a new user account.</h1>
            <label class="label">User Name</label>
            <div class="control">
                <input id="createUserNameInput" class="input" type="text" placeholder="Input User Name Here.">
            </div>
            <p class="help">Between 1 and 50 characters. Alphanumeric only.</p>
        </div>

        <div class="field is-grouped creatingUser is-hidden">
            <div class="control">
                <button id="createUserSubmit" style="font-size:medium; positon: abosolute; color:#ffae00; background-color: #03045c;"class="button">Submit</button>
            </div>
            <div class="control">
                <button id="makeLoginForm" style="font-size:medium; positon: abosolute; color:#ffae00; background-color: #03045c;"class="button">Log In</button>
            </div>
        </div>

        <div class="field logInUser is-hidden">
            <h1>Login to your account.</h1>
            <label class="label">User Name</label>
            <div class="control">
                <input id="logInUserNameInput" class="input" type="text" placeholder="Input User Name Here.">
            </div>
        </div>

        <div class="field is-grouped logInUser is-hidden">
            <div class="control">
                <button id="logInUserSubmit" style="font-size:medium; positon: abosolute; color:#ffae00; background-color: #03045c;"class="button">Submit</button>
            </div>
            <div class="control">
                <button id="makeCreateForm" style="font-size:medium; positon: abosolute; color:#ffae00; background-color: #03045c;"class="button makeCreateForm">Create User Name</button>
            </div>
        </div>
    </div>

</div>

